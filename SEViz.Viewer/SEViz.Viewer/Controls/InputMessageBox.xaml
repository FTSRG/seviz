<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    x:Class="SEViz.Viewer.Controls.InputMessageBox"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize">
    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Margin="5"/>
        <TextBox Name="txtResponse" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_OK" IsDefault="True" Width="60" Margin="5" Name="btnOk" Click="btnOk_Click" />
            <Button Content="_Cancel" IsCancel="True" Width="60" Margin="5" Name="btnCancel" Click="btnCancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>