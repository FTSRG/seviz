<Window x:Class="SEViz.Viewer.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingWindow" Height="70" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border BorderBrush="#FF9E9289" BorderThickness="3 3 3 3">
    <Grid Margin="10,10,10,10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" >Loading graph... Please wait.</TextBlock>
        <ProgressBar Grid.Row="1"  Minimum="0" Maximum="100" Name="pbProgress">
            
        </ProgressBar>
        
    </Grid>
    </Border>
</Window>
